# Variables de entorno para aplicación financiera
# Copiar a .env.local y completar con valores reales

# Base de datos
DATABASE_URL="postgresql://username:password@localhost:5432/budget_couple_app"

# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OpenAI API para chatbot financiero
OPENAI_API_KEY="sk-your-openai-api-key-here"

# Configuraciones de seguridad
ENCRYPTION_KEY="your-encryption-key-for-sensitive-data"

# Configuraciones de email (opcional)
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_FROM="noreply@budgetapp.com"

# Configuraciones de la aplicación
NEXT_PUBLIC_APP_NAME="Budget Couple App"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Configuraciones de desarrollo
NODE_ENV="development" 